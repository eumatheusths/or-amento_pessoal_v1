        </div>

        {msgSucesso && <div class="bg-green-500/20 border border-green-500/50 text-green-200 p-3 rounded-xl text-sm mb-6 text-center animate-pulse">{msgSucesso}</div>}
        {erro && <div class="bg-red-500/20 border border-red-500/50 text-red-200 p-3 rounded-xl text-sm mb-6 text-center">{erro}</div>}

        <form method="POST" enctype="application/x-www-form-urlencoded" class="space-y-5">
