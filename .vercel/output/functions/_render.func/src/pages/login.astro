---
export const prerender = false;
import { findUserByEmail } from '../lib/db';

let erro = '';
let msgSucesso = '';

const urlParams = Astro.url.searchParams;
if (urlParams.get('cadastrado') === 'true') {
    msgSucesso = 'Conta criada! Enviamos os dados para seu e-mail.';
}

if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData();
    const email = data.get('email')?.toString();
    const senha = data.get('senha')?.toString();

    if (!email || !senha) {
      erro = 'Preencha todos os campos.';
    } else {
      const user = await findUserByEmail(email);

      if (!user) {
        erro = 'Usuário não encontrado. Crie uma conta.';
      } else if (user.password !== senha) {
        erro = 'Senha incorreta.';
      } else {
        Astro.cookies.set('user_session', user.id, {
          path: '/',
          httpOnly: true,
          secure: false,
          maxAge: 60 * 60 * 24 * 30 
        });
        return Astro.redirect('/dashboard');
      }
    }
  } catch (e) {
    console.error(e);
    erro = 'Erro interno. Tente novamente.';
  }
}
---

