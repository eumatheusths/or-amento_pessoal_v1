---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
import { importTransactions } from '../lib/sheets';
// Importa√ß√£o segura da biblioteca que voc√™ acabou de adicionar no package.json
import OfxParser from 'node-ofx-parser'; 

if (!Astro.cookies.has('user_session')) return Astro.redirect('/login');

let erro = '';
let sucesso = '';

if (Astro.request.method === 'POST') {
    try {
        const formData = await Astro.request.formData();
        const file = formData.get('ofx_file');
        const userId = Astro.cookies.get('user_session')?.value;

        if (!file || file.size === 0) {
            erro = "Por favor, selecione um arquivo OFX.";
        } else {
            const text = await file.text();
            
            // Usa a biblioteca para ler o texto do arquivo
            const data = OfxParser.parse(text);
            
            // Tenta achar transa√ß√µes em Conta Corrente ou Cart√£o
            const bankMsgs = data.OFX.BANKMSGSRSV1?.STMTTRNRS?.STMTRS?.BANKTRANLIST?.STMTTRN;
            const creditMsgs = data.OFX.CREDITCARDMSGSRSV1?.CCSTMTTRNRS?.CCSTMTRS?.BANKTRANLIST?.STMTTRN;
            
            let listaBruta = [];
            
            if (bankMsgs) {
                listaBruta = Array.isArray(bankMsgs) ? bankMsgs : [bankMsgs];
            } else if (creditMsgs) {
                listaBruta = Array.isArray(creditMsgs) ? creditMsgs : [creditMsgs];
            }

            if (listaBruta.length === 0) {
                erro = "Nenhuma transa√ß√£o encontrada neste arquivo OFX.";
            } else {
                const transacoesFormatadas = listaBruta.map(t => {
                    // Formata data YYYYMMDD para DD/MM/YYYY
                    const ano = t.DTPOSTED.substring(0, 4);
                    const mes = t.DTPOSTED.substring(4, 6);
                    const dia = t.DTPOSTED.substring(6, 8);
                    
                    const valor = parseFloat(t.TRNAMT);

                    return {
                        user_id: userId,
                        date: `${dia}/${mes}/${ano}`,
                        description: t.MEMO || t.NAME || 'Transa√ß√£o OFX',
                        amount: Math.abs(valor),
                        type: valor < 0 ? 'saida' : 'entrada',
                        category: 'Importado OFX',
                        method: valor < 0 ? 'pix' : 'pix'
                    };
                });

                await importTransactions(transacoesFormatadas);
                sucesso = `${transacoesFormatadas.length} transa√ß√µes importadas com sucesso!`;
            }
        }
    } catch (e) {
        console.error(e);
        erro = "Erro ao processar o arquivo. Verifique se √© um OFX v√°lido.";
    }
}
---

<Layout>
    <div class="min-h-screen bg-blue-950 text-blue-50">
        <div class="p-6 bg-blue-900/20 border-b border-blue-800/30 flex items-center gap-4">
            <a href="/dashboard" class="p-2 bg-blue-900 rounded-lg text-blue-400 hover:bg-blue-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
