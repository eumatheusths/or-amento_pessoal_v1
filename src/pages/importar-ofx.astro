            {erro && <div class="bg-red-500/20 text-red-200 p-4 rounded-xl border border-red-500/50 text-center">{erro}</div>}
            {sucesso && <div class="bg-green-500/20 text-green-200 p-4 rounded-xl border border-green-500/50 text-center font-bold">{sucesso}</div>}

