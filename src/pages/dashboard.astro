---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
import { getUserTransactions } from '../lib/sheets';

if (!Astro.cookies.has('user_session')) return Astro.redirect('/login');
const userId = Astro.cookies.get('user_session')?.value;

const urlParams = Astro.url.searchParams;
const hoje = new Date();
const mesAtual = parseInt(urlParams.get('mes')) || (hoje.getMonth() + 1);
const anoAtual = parseInt(urlParams.get('ano')) || hoje.getFullYear();
const paramsUrl = `?mes=${mesAtual}&ano=${anoAtual}`;

const transactions = await getUserTransactions(userId, mesAtual, anoAtual);
// Unimos tudo numa lista s√≥ para facilitar a busca, mas mantemos a ordem
// Vamos renderizar tudo e o JS controla o que aparece
const todasTransacoes = transactions; // O filtro visual ser√° feito no front

const totalEntradas = transactions.filter(t => t.type === 'entrada').reduce((acc, t) => acc + t.amount, 0);
const totalSaidas = transactions.filter(t => t.type === 'saida').reduce((acc, t) => acc + t.amount, 0);
const saldoPrevisto = totalEntradas - totalSaidas;
const porcentagemGasta = totalEntradas > 0 ? Math.min((totalSaidas / totalEntradas) * 100, 100) : (totalSaidas > 0 ? 100 : 0);

const money = (value) => new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(value);

const dataDisplay = new Date(anoAtual, mesAtual - 1, 1).toLocaleString('pt-BR', { month: 'long', year: 'numeric' });
const prevDate = new Date(anoAtual, mesAtual - 2, 1);
const nextDate = new Date(anoAtual, mesAtual, 1);
const linkPrev = `/dashboard?mes=${prevDate.getMonth() + 1}&ano=${prevDate.getFullYear()}`;
const linkNext = `/dashboard?mes=${nextDate.getMonth() + 1}&ano=${nextDate.getFullYear()}`;
---

<Layout>
    <nav class="px-6 pt-6 pb-2 flex justify-between items-center bg-gradient-to-b from-blue-900/50 to-transparent">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center shadow-lg border-2 border-blue-400">
                <span class="text-2xl font-bold text-white">$</span>
            </div>
            <div>
                <h1 class="font-bold text-lg leading-none text-blue-50">Minhas Finan√ßas</h1>
                <p class="text-xs text-blue-400 capitalize">{dataDisplay}</p>
            </div>
        </div>
        
        <div class="flex items-center gap-2 bg-blue-900/80 rounded-full p-1 border border-blue-700/50">
            <a href={linkPrev} class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-blue-700 text-blue-300 transition-colors">‚ùÆ</a>
            <span class="text-sm font-bold text-white capitalize min-w-[90px] text-center">{new Date(anoAtual, mesAtual - 1).toLocaleString('pt-BR', { month: 'short' })}/{anoAtual.toString().slice(2)}</span>
            <a href={linkNext} class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-blue-700 text-blue-300 transition-colors">‚ùØ</a>
        </div>
    </nav>

    <main class="max-w-3xl mx-auto px-4 space-y-6 mt-4">
        
        <div class="bg-gradient-to-br from-blue-600 to-blue-800 p-6 rounded-3xl shadow-xl relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -mr-10 -mt-10 blur-2xl"></div>
            <p class="text-blue-100 text-sm font-medium mb-1 opacity-80">Saldo Previsto</p>
            <h2 class={`text-4xl font-bold tracking-tight mb-4 ${saldoPrevisto < 0 ? 'text-red-300' : 'text-white'}`}>
                {money(saldoPrevisto)}
            </h2>
            <div class="relative pt-1">
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-900/50">
                    <div style={`width:${porcentagemGasta}%`} class={`shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center transition-all duration-500 ${porcentagemGasta > 90 ? 'bg-red-400' : 'bg-green-400'}`}></div>
                </div>
            </div>
            <div class="flex gap-4 pt-2 border-t border-white/10">
                <div>
                    <span class="text-xs text-blue-200 block">Entradas</span>
                    <span class="font-bold text-green-300">{money(totalEntradas)}</span>
                </div>
                <div>
                    <span class="text-xs text-blue-200 block">Sa√≠das</span>
                    <span class="font-bold text-red-300">{money(totalSaidas)}</span>
                </div>
            </div>
        </div>

        <div class="space-y-3">
            <div class="relative">
                <input type="text" id="search-input" placeholder="Buscar conta, mercado, freela..." 
                    class="w-full bg-blue-900/40 border border-blue-800/50 text-white text-sm rounded-xl pl-10 pr-4 py-3 focus:outline-none focus:border-blue-500 focus:bg-blue-900/60 transition-all placeholder-blue-400/50">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-400 absolute left-3 top-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>

            <div class="flex gap-2 overflow-x-auto pb-1 scrollbar-hide">
                <button onclick="filterType('all')" id="btn-all" class="filter-btn active px-4 py-1.5 rounded-lg text-xs font-bold bg-blue-500 text-white transition-all border border-blue-500">
                    Todos
                </button>
                <button onclick="filterType('entrada')" id="btn-entrada" class="filter-btn px-4 py-1.5 rounded-lg text-xs font-bold bg-blue-900/40 text-blue-300 border border-blue-800/50 hover:bg-blue-800 transition-all">
                    Entradas
                </button>
                <button onclick="filterType('saida')" id="btn-saida" class="filter-btn px-4 py-1.5 rounded-lg text-xs font-bold bg-blue-900/40 text-blue-300 border border-blue-800/50 hover:bg-blue-800 transition-all">
                    Sa√≠das
                </button>
                <button onclick="filterType('pendente')" id="btn-pendente" class="filter-btn px-4 py-1.5 rounded-lg text-xs font-bold bg-blue-900/40 text-blue-300 border border-blue-800/50 hover:bg-blue-800 transition-all">
                    A Pagar
                </button>
            </div>
        </div>

        <div id="lista-transacoes" class="space-y-3 min-h-[200px]">
            {todasTransacoes.map(t => (
                <div class="transacao-item bg-blue-900/30 border border-blue-800/30 p-4 rounded-2xl flex justify-between items-center hover:bg-blue-900/50 transition-colors" 
                     data-type={t.type} 
                     data-status={t.status}
                     data-desc={t.description.toLowerCase()}
                     data-cat={t.category.toLowerCase()}>
                    
                    <div class="flex items-center gap-3">
                        <div class={`w-10 h-10 rounded-full flex items-center justify-center text-lg shrink-0 ${t.type === 'entrada' ? 'bg-green-500/10 text-green-400' : 'bg-red-500/10 text-red-400'}`}>
                            {t.type === 'entrada' ? '‚Üë' : '‚Üì'}
                        </div>
                        <div>
                            <div class="flex items-center gap-2">
                                <p class="font-bold text-white text-sm line-clamp-1">{t.description}</p>
                                {t.method === 'credit' && <span class="text-[10px] bg-purple-500/20 text-purple-300 px-1.5 py-0.5 rounded border border-purple-500/30">üí≥</span>}
                                {t.status === 'pendente' && <span class="text-[10px] bg-yellow-500/20 text-yellow-300 px-1.5 py-0.5 rounded border border-yellow-500/30">‚è≥</span>}
                            </div>
                            <div class="flex items-center gap-2 text-xs text-blue-400/70">
                                <span>{t.date}</span>
                                <span class="capitalize">‚Ä¢ {t.category}</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex flex-col items-end gap-1 pl-2">
                        <p class={`font-bold text-sm whitespace-nowrap ${t.type === 'entrada' ? 'text-green-400' : 'text-white'}`}>
                            {t.type === 'saida' && '- '}{money(t.amount)}
                        </p>

                        <div class="flex items-center gap-1 opacity-70 hover:opacity-100">
                            {t.status === 'pendente' && (
                                <form action={"/pagar" + paramsUrl} method="POST">
                                    <input type="hidden" name="id" value={t.id} />
                                    <button title="Pagar" class="bg-green-600/80 hover:bg-green-500 text-white p-1.5 rounded-lg transition-colors">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                                    </button>
                                </form>
                            )}
                            <a href={`/editar?id=${t.id}`} class="bg-blue-600/80 hover:bg-blue-500 text-white p-1.5 rounded-lg transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                            </a>
                            <form action={"/deletar" + paramsUrl} method="POST" onsubmit="return confirm('Excluir?')">
                                <input type="hidden" name="id" value={t.id} />
                                <button class="bg-red-500/20 hover:bg-red-500 text-red-400 hover:text-white p-1.5 rounded-lg transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            ))}
            
            {todasTransacoes.length === 0 && (
                <div class="text-center py-10 text-blue-400/50 border-2 border-dashed border-blue-900 rounded-xl">
                    <p>Nada lan√ßado neste m√™s.</p>
                </div>
            )}
            
            <div id="no-results" class="hidden text-center py-10 text-blue-400/50">
                <p>Nenhum lan√ßamento encontrado com esse filtro.</p>
            </div>
        </div>

    </main>

    <script is:inline>
        const searchInput = document.getElementById('search-input');
        const items = document.querySelectorAll('.transacao-item');
        const noResults = document.getElementById('no-results');
        const buttons = document.querySelectorAll('.filter-btn');
        let currentType = 'all';

        // 1. Fun√ß√£o de Filtrar
        function filterItems() {
            const term = searchInput.value.toLowerCase();
            let visibleCount = 0;

            items.forEach(item => {
                const desc = item.getAttribute('data-desc');
                const cat = item.getAttribute('data-cat');
                const type = item.getAttribute('data-type');
                const status = item.getAttribute('data-status');

                // Verifica Texto
                const matchesText = desc.includes(term) || cat.includes(term);
                
                // Verifica Tipo
                let matchesType = true;
                if (currentType === 'entrada') matchesType = type === 'entrada';
                if (currentType === 'saida') matchesType = type === 'saida';
                if (currentType === 'pendente') matchesType = status === 'pendente';

                if (matchesText && matchesType) {
                    item.classList.remove('hidden');
                    visibleCount++;
                } else {
                    item.classList.add('hidden');
                }
            });

            // Mostra msg se n√£o achou nada
            if (visibleCount === 0 && items.length > 0) {
                noResults.classList.remove('hidden');
            } else {
                noResults.classList.add('hidden');
            }
        }

        // 2. Evento de Digita√ß√£o
        searchInput.addEventListener('input', filterItems);

        // 3. Evento dos Bot√µes (Global function para o onclick)
        window.filterType = (type) => {
            currentType = type;
            
            // Atualiza estilo dos bot√µes
            buttons.forEach(btn => {
                btn.classList.remove('bg-blue-500', 'text-white');
                btn.classList.add('bg-blue-900/40', 'text-blue-300');
            });
            const activeBtn = document.getElementById('btn-' + type);
            activeBtn.classList.remove('bg-blue-900/40', 'text-blue-300');
            activeBtn.classList.add('bg-blue-500', 'text-white');

            filterItems();
        };
    </script>
</Layout>
