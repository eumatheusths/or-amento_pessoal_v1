---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
import { getUserTransactions } from '../lib/sheets';

if (!Astro.cookies.has('user_session')) return Astro.redirect('/login');
const userId = Astro.cookies.get('user_session')?.value;

// 1. Controle de Data
const urlParams = Astro.url.searchParams;
const hoje = new Date();
const mesAtual = parseInt(urlParams.get('mes')) || (hoje.getMonth() + 1);
const anoAtual = parseInt(urlParams.get('ano')) || hoje.getFullYear();

// 2. Busca transa√ß√µes do m√™s
const transactions = await getUserTransactions(userId, mesAtual, anoAtual);

// 3. C√ÅLCULOS REAIS (Sem valor fixo)
const pendentes = transactions.filter(t => t.status === 'pendente').reverse();
const historico = transactions.filter(t => t.status !== 'pendente');

// Soma tudo que √© do tipo 'entrada' (Sal√°rio, B√¥nus, Freela...)
const totalEntradas = transactions.filter(t => t.type === 'entrada').reduce((acc, t) => acc + t.amount, 0);
const totalSaidas = transactions.filter(t => t.type === 'saida').reduce((acc, t) => acc + t.amount, 0);

// O Saldo √© puramente Entradas - Sa√≠das
const saldoPrevisto = totalEntradas - totalSaidas;

// Evita divis√£o por zero na barra de progresso
const porcentagemGasta = totalEntradas > 0 ? Math.min((totalSaidas / totalEntradas) * 100, 100) : (totalSaidas > 0 ? 100 : 0);
const money = (value) => new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(value);

// Navega√ß√£o
const dataDisplay = new Date(anoAtual, mesAtual - 1, 1).toLocaleString('pt-BR', { month: 'long', year: 'numeric' });
const prevDate = new Date(anoAtual, mesAtual - 2, 1);
const nextDate = new Date(anoAtual, mesAtual, 1);
const linkPrev = `/dashboard?mes=${prevDate.getMonth() + 1}&ano=${prevDate.getFullYear()}`;
const linkNext = `/dashboard?mes=${nextDate.getMonth() + 1}&ano=${nextDate.getFullYear()}`;
---

<Layout>
   <nav class="px-6 pt-6 pb-2 flex justify-between items-center bg-gradient-to-b from-blue-900/50 to-transparent">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-500 rounded-xl flex items-center justify-center shadow-lg">
                <span class="text-xl">üíé</span>
            </div>
            <div>
                <h1 class="font-bold text-lg leading-none text-blue-50">Minhas Finan√ßas</h1>
                <div class="flex gap-3 mt-1">
                    <a href="/importar" class="text-xs text-blue-400 hover:text-white flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" /></svg>
                        Importar
                    </a>
                    <a href="/metas" class="text-xs text-yellow-400 hover:text-yellow-200 flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16.5 18.75h-9m9 0a3 3 0 013 3h-15a3 3 0 013-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 01-.982-3.172M9.497 14.25a7.454 7.454 0 00.981-3.172M5.25 4.236c-.982.143-1.954.317-2.916.52A6.003 6.003 0 007.73 9.728M5.25 4.236V4.5c0 2.108.966 3.99 2.48 5.228M5.25 4.236V2.721C7.456 2.41 9.71 2.25 12 2.25c2.291 0 4.545.16 6.75.47v1.516M7.73 9.728a6.726 6.726 0 002.748 1.35m8.272-6.842V4.5c0 2.108-.966 3.99-2.48 5.228m2.48-5.492a46.32 46.32 0 012.916.52 6.003 6.003 0 01-5.395 4.972m0 0a6.726 6.726 0 01-2.749 1.35" /></svg>
                        Metas
                    </a>
                </div>
            </div>
        </div>
        
        <div class="flex items-center gap-2 bg-blue-900/80 rounded-full p-1 border border-blue-700/50">
            <a href={linkPrev} class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-blue-700 text-blue-300">‚ùÆ</a>
            <span class="text-sm font-bold text-white capitalize min-w-[100px] text-center">{dataDisplay}</span>
            <a href={linkNext} class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-blue-700 text-blue-300">‚ùØ</a>
        </div>
    </nav>

    <main class="max-w-3xl mx-auto px-4 space-y-6 mt-4">
        
        {totalEntradas === 0 && (
            <div class="bg-orange-500/20 border border-orange-500/50 p-4 rounded-2xl flex items-center justify-between animate-pulse">
                <div class="flex items-center gap-3">
                    <span class="text-2xl">üí∏</span>
                    <div>
                        <p class="font-bold text-orange-100 text-sm">Sem renda este m√™s?</p>
                        <p class="text-xs text-orange-200">Lance seu sal√°rio ou ganhos.</p>
                    </div>
                </div>
                <a href="/adicionar?tipo=entrada" class="bg-orange-500 text-white text-xs font-bold px-3 py-2 rounded-lg hover:bg-orange-600">
                    Lan√ßar Agora
                </a>
            </div>
        )}

        <div class="bg-gradient-to-br from-blue-600 to-blue-800 p-6 rounded-3xl shadow-xl relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -mr-10 -mt-10 blur-2xl"></div>
            <p class="text-blue-100 text-sm font-medium mb-1 opacity-80 capitalize">Saldo Previsto ({dataDisplay})</p>
            <h2 class={`text-4xl font-bold tracking-tight mb-4 ${saldoPrevisto < 0 ? 'text-red-300' : 'text-white'}`}>
                {money(saldoPrevisto)}
            </h2>
            
            <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-200 bg-blue-900/50">
                        Comprometido
                    </span>
                    <span class="text-xs font-semibold inline-block text-blue-200">
                        {Math.round(porcentagemGasta)}%
                    </span>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-900/50">
                    <div style={`width:${porcentagemGasta}%`} class={`shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center ${porcentagemGasta > 90 ? 'bg-red-400' : 'bg-green-400'}`}></div>
                </div>
            </div>

            <div class="flex gap-4 pt-2 border-t border-white/10">
                <div>
                    <span class="text-xs text-blue-200 block">Entradas</span>
                    <span class="font-bold text-green-300">{money(totalEntradas)}</span>
                </div>
                <div>
                    <span class="text-xs text-blue-200 block">Sa√≠das</span>
                    <span class="font-bold text-red-300">{money(totalSaidas)}</span>
                </div>
            </div>
        </div>

        {pendentes.length > 0 && (
            <div>
                <h3 class="text-yellow-400 font-bold mb-3 flex items-center gap-2 px-2 text-sm uppercase tracking-wider">
                    A Pagar ({pendentes.length})
                </h3>
                <div class="space-y-3">
                    {pendentes.map(t => (
                        <div class="bg-blue-900/60 border border-yellow-500/30 p-4 rounded-2xl flex justify-between items-center relative overflow-hidden">
                            <div class="absolute left-0 top-0 bottom-0 w-1 bg-yellow-500"></div>
                            <div class="pl-3">
                                <p class="font-bold text-white text-sm">{t.description}</p>
                                <p class="text-xs text-yellow-200 font-medium">Dia {t.date.split('/')[0]}</p>
                            </div>
                            <div class="flex items-center gap-3">
                                <p class="font-bold text-white">{money(t.amount)}</p>
                                <form action="/pagar" method="POST">
                                    <input type="hidden" name="id" value={t.id} />
                                    <button class="bg-green-500 hover:bg-green-400 text-white p-2 rounded-lg shadow-lg">‚úî</button>
                                </form>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        )}

        <div>
            <h3 class="text-blue-200 font-bold mb-3 flex items-center gap-2 px-2 text-sm uppercase tracking-wider">
                Hist√≥rico do M√™s
            </h3>
            <div class="space-y-3">
                {historico.length === 0 ? (
                    <div class="text-center py-8 text-blue-400/50 border-2 border-dashed border-blue-900 rounded-xl">
                        <p>Nenhuma movimenta√ß√£o neste m√™s.</p>
                    </div>
                ) : (
                    historico.map(t => (
                        <div class="bg-blue-900/30 border border-blue-800/30 p-4 rounded-2xl flex justify-between items-center hover:bg-blue-900/50 transition-colors">
                            <div class="flex items-center gap-3">
                                <div class={`w-10 h-10 rounded-full flex items-center justify-center text-lg ${t.type === 'entrada' ? 'bg-green-500/10 text-green-400' : 'bg-red-500/10 text-red-400'}`}>
                                    {t.type === 'entrada' ? '‚Üë' : '‚Üì'}
                                </div>
                                <div>
                                    <p class="font-bold text-white text-sm">{t.description}</p>
                                    <div class="flex items-center gap-2 text-xs text-blue-400/70">
                                        <span>{t.date}</span>
                                        <span class="capitalize">‚Ä¢ {t.status}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex flex-col items-end gap-1">
                                <p class={`font-bold text-sm ${t.type === 'entrada' ? 'text-green-400' : 'text-white'}`}>
                                    {t.type === 'saida' && '- '}{money(t.amount)}
                                </p>
                                <form action="/deletar" method="POST" onsubmit="return confirm('Excluir?')">
                                    <input type="hidden" name="id" value={t.id} />
                                    <button class="text-xs text-blue-600 hover:text-red-400 p-1">Excluir</button>
                                </form>
                            </div>
                        </div>
                    ))
                )}
            </div>
        </div>
    </main>
</Layout>